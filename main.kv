<Gerenciador>:
    TelaInicial:
        name: 'Tela Inicial'
		
		canvas:
    	    Color:
        	    rgba:1,1,1,1
	        Rectangle:
	            size:self.size
	            pos:self.pos
	            source:'img/bgMenu3.png'

		BoxLayout:
			id:'ImagemEBotoes'
			orientation:'vertical'
			spacing: '10dp'
			padding: self.width*0.25, self.height*0.15

			Image:
				source:'img/logoApp.png'
				size_hint_y:0.75
				allow_stretch: True

			BoxLayout:
				id:'Botãos'
				orientation: 'vertical'
				padding: self.width*0.25, self.height*0.05
				spacing: '15dp'

				Button:
					text:'Jogos'
					on_release: app.root.current = 'Gerenciador de Jogos'


				Button:
					text:'Sobre A Astronomia'

				Button:
					text:'Licenças'



    
    GerenciadorDeJogos:
        name: 'Gerenciador de Jogos'

		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
				source:'img/bgMenu3.png'

		BoxLayout:
			id: 'Ações'
			orientation: 'vertical'

			ActionBar:
				ActionView:
					ActionPrevious:
						title: 'Gerenciador de Jogos'
						on_release: app.root.current = 'Tela Inicial'

			BoxLayout:
				id: 'ImagemEBotoesGdJ'
				orientation: 'vertical'
				orientation:'vertical'
				padding: self.width*0.25, self.height*0.25
				spacing: '20dp'

				Image:
					source: 'img/GerenciadorJogos.png'
					size_hint_y:0.4
					allow_stretch: True

				BoxLayout:
					id:'BotãosGdJ'
					orientation: 'vertical'
					padding: self.width*0.25, self.height*0.05
					spacing: '15dp'

					Button:
						text: 'Ataque dos meteoros'
						on_release: app.root.current = 'Fases_AtaqueDosMeteoros'
    
    Fases:
        name:'Fases_AtaqueDosMeteoros'
		
		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
				source:'img/bgMenu3.png'
		
		BoxLayout:
			id: 'AçãoF'
			orientation: 'vertical'

			ActionBar:
				ActionView:
					ActionPrevious:
						title: 'Fases'
						on_release: app.root.current='Tela Inicial'
			
			BoxLayout:
				id: 'ImagemEBotoesF'
				orientation:'vertical'
				padding: self.width*0.25, self.height*0.25
				spacing: '20dp'

				Image:
					source: 'img/Fases.png'
					size_hint_y:0.4
					allow_stretch: True


				BoxLayout:
					id: 'BotoesF'
					spacing: '20dp'
					padding: self.width*0.1, self.height*0.3

					Button:
						text: '1'
						on_release: 
							app.root.current='Ataque dos Meteoros'
							app.root.get_screen('Ataque dos Meteoros').chamaPlayThru()

					Button:
						text: '2'

					Button:
						text: '3'

					Button:
						text: '4'

					Button:
						text: '5'

	AtaqueDosMeteoros:

<AtaqueDosMeteoros>:
	name:'Ataque dos Meteoros'

	canvas:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			size:self.size
			pos:self.pos
			source:'img/bgMenu3.png'
			#alow_stretch:True
	
	Sol:
		id: sol
		imagem: 'img/Sol.png'
		tamanho: [450, 450]

	Planetas:
		id: mercurio
		tamanho: [44, 44]
		imagem:'img/Planetas/Mercurio.png'

	Planetas:
		id: venus
		tamanho: [104, 104]
		imagem:'img/Planetas/Venus.png'

	Planetas:
		id: terra
		tamanho: [120, 120]
		imagem:'img/Planetas/Terra.png'

	Planetas:
		id: marte
		tamanho: [61, 61]
		imagem:'img/Planetas/Marte.png'

	BoxLayout:
		id: box
		orientation:'vertical'

		ActionBar:
			ActionView:
				ActionPrevious:
					title:'1° Fase'
					on_release: app.root.current = 'Tela Inicial'
		RelativeLayout:		
